<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activitys.AsignarRutasActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="SELECCIONE LA FECHA A ASIGNAR"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewTitulo">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout2"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:hint="FECHA">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtFechaDisponibilidadChofer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="date"
                            android:textSize="13sp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnConsultarVehiculosChofer"
                        style="@style/Widget.MaterialComponents.Button.TextButton.Dialog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hapticFeedbackEnabled="false"
                        android:text="CONSULTAR"
                        android:textColor="#009688"
                        android:textSize="15sp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/materialCardView">

                <LinearLayout
                    android:id="@+id/layoutOcultoAsignarRutas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txtfechaAsignacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="24sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="SELECCIONE EL VEHICULO"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:text="Vehiculo"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:layout_editor_absoluteX="43dp"
                            tools:layout_editor_absoluteY="110dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text=":"
                            android:textAlignment="gravity"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:layout_editor_absoluteX="150dp"
                            tools:layout_editor_absoluteY="110dp"/>

                        <Spinner
                            android:id="@+id/spVehiculosRutas"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginLeft="16dp"
                            android:dropDownWidth="match_parent"
                            android:scrollbarSize="6dp"
                            tools:layout_editor_absoluteX="194dp"
                            tools:layout_editor_absoluteY="110dp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="SELECCIONE LA DIRECCION"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:text="Cliente"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:layout_editor_absoluteX="43dp"
                            tools:layout_editor_absoluteY="110dp"/>
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text=":"
                            android:textAlignment="gravity"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:layout_editor_absoluteX="150dp"
                            tools:layout_editor_absolutedY="110dp"/>

                        <Spinner
                            android:id="@+id/spClientes"
                            style="@style/Widget.AppCompat.Spinner.DropDown"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginLeft="16dp"
                            android:dropDownWidth="match_parent"
                            android:scrollbarSize="6dp"
                            tools:layout_editor_absoluteX="194dp"
                            tools:layout_editor_absoluteY="110dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:text="Direccion"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:layout_editor_absoluteX="43dp"
                            tools:layout_editor_absolutedY="110dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text=":"
                            android:textAlignment="gravity"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:layout_editor_absoluteX="150dp"
                            tools:layout_editor_absoluteY="110dp"/>

                        <Spinner
                            android:id="@+id/spDireccion"
                            style="@style/Widget.AppCompat.Spinner.DropDown"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginLeft="16dp"
                            android:dropDownWidth="match_parent"
                            android:scrollbarSize="6dp"
                            tools:layout_editor_absoluteX="194dp"
                            tools:layout_editor_absoluteY="110dp"/>

                    </LinearLayout>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutImagenes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/linearLayoutImagenAS"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/isIncidenciasAS"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="15px">

                        </ImageView>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnAnteriorAS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:text="ANTERIOR"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayoutImagenAS"/>

                    <Button
                        android:id="@+id/btnSiguienteAS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="50dp"
                        android:text="SIGUIENTE"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/btnAnteriorAS"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/btnAnteriorAS"/>

                    <Button
                        android:id="@+id/btnGrabarAsignarRuta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="GRABAR"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/btnTomarImagenAS"
                        app:layout_constraintHorizontal_bias="0.505"
                        app:layout_constraintStart_toStartOf="@id/btnSubirImagenAS"
                        app:layout_constraintTop_toBottomOf="@id/btnVisualizarAdjuntosAS"
                        app:layout_constraintVertical_bias="0.0"/>

                    <Button
                        android:id="@+id/btnSubirImagenAS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="20dp"
                        android:text="IMAGEN"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"/>

                    <Button
                        android:id="@+id/btnTomarImagenAS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="50dp"
                        android:text="FOTO"
                        app:layout_constraintBottom_toBottomOf="@+id/btnSubirImagenAS"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"/>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="SELECCIONE COMO DESEA ADJUNTAR SU COMPROBANTE"
                        android:textColor="#000000"
                        app:layout_constraintEnd_toEndOf="@+id/btnSiguienteAS"
                        app:layout_constraintStart_toStartOf="@+id/btnAnteriorAS"
                        app:layout_constraintTop_toBottomOf="@+id/btnAnteriorAS"/>

                    <Button
                        android:id="@+id/btnVisualizarAdjuntosAS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80dp"
                        android:text="VIZUALIZAR ADJUNTOS"
                        app:layout_constraintEnd_toEndOf="@+id/btnTomarImagenAS"
                        app:layout_constraintStart_toStartOf="@+id/btnSubirImagenAS"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>